<p><%= @character.name %> is going to fight <%= @enemy.name %></p>
      <div class="character-card-info">
        <h2> <%= @character.name %> </h2>
        <p>health: <%= @character.health %> </p>
        <p>hunger: <%= @character.hunger %> </p>
        <p>attack: <%= @character.attack %> </p>
        <% if @character.location %>
        <p>location: <%= @character.location.name %> </p>
        <% end %>
      </div>

            <div class="enemy-card-info">
        <h2><%= @enemy.name %> </h2>
        <p>health: <%= @enemy.health %> </p>
        <p>attack: <%= @enemy.attack %> </p>
      </div>

<p>what will you do?</p>
<%= button_to 'Attack', attack_enemy_user_character_battle_path(params[:user_id], params[:character_id]), method: :post, class: "" %>
<%= button_to 'block', fight_user_character_battle_path(params[:user_id], params[:id]), method: :post, class: "" %>
<%= button_to 'item', fight_user_character_battle_path(params[:user_id], params[:id]), method: :post, class: "" %>
<%= button_to 'run', fight_user_character_battle_path(params[:user_id], params[:id]), method: :post, class: "" %>

